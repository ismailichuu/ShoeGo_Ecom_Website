<% title = 'Edit Address' %>
<div class="max-w-4xl mx-auto bg-gradient-to-r from-gray-100 via-white to-purple-100 p-8 rounded-xl shadow-lg">
    <h2 class="text-2xl font-semibold mb-6 text-gray-700">Edit Address</h2>

    <form action="/edit-address/<%= address._id %>" method="POST" class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

             <div>
                <label class="block text-sm font-medium text-gray-700">Name</label>
                <input type="text" name="name" value="<%= address.name || '' %>" placeholder="Enter your Name"
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-purple-500 focus:border-purple-500"
                    required>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700">Mobile Number</label>
                <input type="text" name="phone" value="<%= address.mobileNumber %>" required
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-purple-500 focus:border-purple-500">
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700">Pincode</label>
                <input type="text" name="pincode" value="<%= address.pincode %>" required
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-purple-500 focus:border-purple-500">
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700">Locality</label>
                <input type="text" name="locality" value="<%= address.locality %>" required
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-purple-500 focus:border-purple-500">
            </div>

            <div class="md:col-span-2">
                <label class="block text-sm font-medium text-gray-700">House No.</label>
                <textarea name="houseNo" rows="3" required
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-purple-500 focus:border-purple-500"><%= address.houseNo %></textarea>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700">City/District/Town</label>
                <input type="text" name="city" value="<%= address.city %>" required
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-purple-500 focus:border-purple-500">
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700">State</label>
                <select name="state" required
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-purple-500 focus:border-purple-500">
                    <option value="">--- select state ---</option>
                    <option value="Karnataka" <%= address.state === 'Karnataka' ? 'selected' : '' %>>Karnataka</option>
                    <option value="Maharashtra" <%= address.state === 'Maharashtra' ? 'selected' : '' %>>Maharashtra</option>
                    <option value="Kerala" <%= address.state === 'Kerala' ? 'selected' : '' %>>Kerala</option>
                    <option value="Delhi" <%= address.state === 'Delhi' ? 'selected' : '' %>>Delhi</option>
                </select>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700">Landmark</label>
                <input type="text" name="landmark" value="<%= address.landmark %>" 
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-purple-500 focus:border-purple-500">
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700">Alternate phone number</label>
                <input type="text" name="altPhone" value="<%= address.alternatePhone %>" 
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-purple-500 focus:border-purple-500">
            </div>
        </div>

        <div class="flex items-center space-x-6 mt-4">
            <div class="flex items-center">
                <input id="home" name="type" type="radio" value="Home" required
                    class="h-4 w-4 text-purple-600 border-gray-300 focus:ring-purple-500"
                    <%= address.addressType === 'Home' ? 'checked' : '' %>>
                <label for="home" class="ml-2 text-sm text-gray-700">Home</label>
            </div>

            <div class="flex items-center">
                <input id="work" name="type" type="radio" value="Work"
                    class="h-4 w-4 text-purple-600 border-gray-300 focus:ring-purple-500"
                    <%= address.addressType === 'Work' ? 'checked' : '' %>>
                <label for="work" class="ml-2 text-sm text-gray-700">Work</label>
            </div>
        </div>

        <!--Set as default checkbox -->
        <div class="mt-4 flex items-center">
            <input id="default" name="isDefault" type="checkbox" value="true"
                class="h-4 w-4 text-purple-600 border-gray-300 focus:ring-purple-500"
                <%= address.isDefault ? 'checked' : '' %>>
            <label for="default" class="ml-2 text-sm text-gray-700">Set as default address</label>
        </div>

        <% if(msg) { %>
        <p class="text-red-600 text-center" id="error"><%= msg %></p>
        <script>
            setTimeout(() => {
                document.getElementById('error').style.display = 'none';
            }, 8000);
        </script>
        <% } %>

        <div class="mt-6 flex space-x-4">
            <button type="submit"
                class="bg-black hover:bg-gray-700 text-white px-6 py-2 rounded-md transition">Update</button>
            <a href="/addresses"
                class="bg-gray-400 text-black px-6 py-2 rounded-md transition">Cancel</a>
        </div>
    </form>
</div>
