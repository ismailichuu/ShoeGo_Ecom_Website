<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>ShoeGo | Shop</title>
  <link rel="shortcut icon" href="images/favicon.png" type="image/x-icon" />
  <link rel="stylesheet" href="/css/output.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            'inter': ['Inter', 'sans-serif'],
          },
          animation: {
            'fade-in': 'fadeIn 0.5s ease-in-out',
            'slide-up': 'slideUp 0.6s ease-out',
            'bounce-subtle': 'bounceSubtle 2s infinite',
          },
          keyframes: {
            fadeIn: {
              '0%': { opacity: '0', transform: 'translateY(20px)' },
              '100%': { opacity: '1', transform: 'translateY(0)' }
            },
            slideUp: {
              '0%': { opacity: '0', transform: 'translateY(40px)' },
              '100%': { opacity: '1', transform: 'translateY(0)' }
            },
            bounceSubtle: {
              '0%, 100%': { transform: 'translateY(0)' },
              '50%': { transform: 'translateY(-5px)' }
            }
          }
        }
      }
    }
  </script>
</head>

<body class="font-inter bg-gradient-to-br from-indigo-100 via-purple-50 to-pink-100 min-h-screen">
  <!-- Header -->
  <header class="bg-white/80 backdrop-blur-lg border-b border-white/20 sticky top-0 z-50 shadow-lg">
    <div class="max-w-7xl mx-auto px-6 py-4">
      <div class="flex justify-between items-center">
        <a href="/" class="transition-transform hover:scale-105">
          <img src="images/logo.png" alt="Shoego logo" class="w-40 opacity-90" />
        </a>
        
        <div class="flex items-center space-x-8">
          <!-- Search Bar -->
          <form method="GET" action="/allProducts" class="relative group">
            <div class="flex items-center bg-white/90 backdrop-blur-sm rounded-full px-4 py-2 shadow-lg border border-white/30 transition-all duration-300 hover:shadow-xl hover:bg-white">
              <input type="text" name="search" value="<%= search || '' %>" placeholder="Search your perfect shoes..."
                class="outline-none px-2 py-1 rounded-full w-72 text-gray-700 bg-transparent placeholder-gray-500" />
              <% if (search) { %>
                <a href="/allProducts" class="text-red-500 hover:text-red-600 font-bold px-2 transition-colors">✖</a>
              <% } %>
              <button type="submit" class="text-purple-600 hover:text-purple-700 font-bold px-2 transition-colors">
                <i class="fas fa-search"></i>
              </button>
            </div>
          </form>

          <!-- Navigation Icons -->
          <div class="flex items-center space-x-6">
            <a href="/profile" class="group relative">
              <div class="bg-white/80 backdrop-blur-sm p-3 rounded-full shadow-lg border border-white/30 transition-all duration-300 hover:shadow-xl hover:bg-white group-hover:scale-110">
                <i class="fas fa-user text-gray-600 group-hover:text-indigo-600 transition-colors"></i>
              </div>
            </a>
            <a href="/cart" class="group relative">
              <div class="bg-white/80 backdrop-blur-sm p-3 rounded-full shadow-lg border border-white/30 transition-all duration-300 hover:shadow-xl hover:bg-white group-hover:scale-110">
                <i class="fas fa-shopping-cart text-gray-600 group-hover:text-yellow-500 transition-colors"></i>
              </div>
            </a>
            <a href="/wishlist" class="group relative">
              <div class="bg-white/80 backdrop-blur-sm p-3 rounded-full shadow-lg border border-white/30 transition-all duration-300 hover:shadow-xl hover:bg-white group-hover:scale-110">
                <i class="fas fa-heart text-gray-600 group-hover:text-red-500 transition-colors"></i>
              </div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Layout -->
  <div class="max-w-7xl mx-auto p-6">
    <div class="flex gap-8">
      <!-- Sidebar Filters -->
      <aside class="w-80 animate-slide-up">
        <div class="bg-white/90 backdrop-blur-lg rounded-3xl p-6 shadow-xl border border-white/30 sticky top-24">
          <h2 class="text-2xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent mb-6">
            <i class="fas fa-filter mr-2"></i>Filters
          </h2>
          
          <form method="GET" action="/allProducts" class="space-y-8">
            <!-- Preserve search -->
            <input type="hidden" name="search" value="<%= search || '' %>" />

            <!-- Category -->
            <div class="space-y-3">
              <h3 class="font-semibold text-gray-800 flex items-center">
                <i class="fa-solid fa-layer-group text-indigo-500 mr-2"></i>
                Category
              </h3>
              <select name="category" onchange="this.form.submit()" 
                class="w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-indigo-500 focus:outline-none transition-colors bg-white/80 backdrop-blur-sm">
                <option value="">All Categories</option>
                <% categories.forEach(cat=> { %>
                  <option value="<%= cat._id %>" <%=category==cat._id ? 'selected' : '' %>><%= cat.name %></option>
                <% }) %>
              </select>
            </div>

            <!-- Price Filter -->
            <div class="space-y-3">
              <h3 class="font-semibold text-gray-800 flex items-center">
                <i class="fa-solid fa-tag text-green-500 mr-2"></i>
                Price Range
              </h3>
              <div class="grid grid-cols-2 gap-3">
                <input type="number" name="minPrice" placeholder="Min ₹" value="<%= minPrice %>"
                  class="px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-indigo-500 focus:outline-none transition-colors bg-white/80 backdrop-blur-sm" />
                <input type="number" name="maxPrice" placeholder="Max ₹" value="<%= maxPrice %>"
                  class="px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-indigo-500 focus:outline-none transition-colors bg-white/80 backdrop-blur-sm" />
              </div>
              <button type="submit" 
                class="w-full bg-gradient-to-r from-indigo-500 to-purple-600 text-white py-3 rounded-xl font-medium transition-all duration-300 hover:from-indigo-600 hover:to-purple-700 hover:shadow-lg transform hover:scale-105">
                Apply Filters
              </button>
            </div>

            <!-- Sort -->
            <div class="space-y-3">
              <h3 class="font-semibold text-gray-800 flex items-center">
                <i class="fa-solid fa-sort text-purple-500 mr-2"></i>
                Sort By
              </h3>
              <select name="sort" onchange="this.form.submit()" 
                class="w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-indigo-500 focus:outline-none transition-colors bg-white/80 backdrop-blur-sm">
                <option value="">Sort by</option>
                <option value="discountPrice-asc" <%=sort==='discountPrice-asc' ? 'selected' : '' %>>Price: Low to High</option>
                <option value="discountPrice-desc" <%=sort==='discountPrice-desc' ? 'selected' : '' %>>Price: High to Low</option>
                <option value="az" <%=sort==='az' ? 'selected' : '' %>>A - Z</option>
                <option value="za" <%=sort==='za' ? 'selected' : '' %>>Z - A</option>
              </select>
            </div>
          </form>
        </div>
      </aside>

      <!-- Main Products Area -->
      <main class="flex-1 animate-fade-in">
        <!-- Title -->
        <div class="mb-8">
          <h1 class="text-4xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">
            Discover Amazing Shoes
          </h1>
          <p class="text-gray-600 mt-2">Find your perfect pair from our curated collection</p>
        </div>

        <!-- Product Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
          <% products.forEach((product, index) => { %>
            <a href="/product/<%= product._id %>" class="group">
              <div class="bg-white/90 backdrop-blur-lg rounded-3xl overflow-hidden shadow-xl border border-white/30 h-96 flex flex-col transition-all duration-500 hover:shadow-2xl hover:-translate-y-3 hover:bg-white animate-slide-up" 
                style="animation-delay: <%= index * 0.1 %>s">
                
                <!-- Wishlist Button -->
                <button class="absolute top-4 right-4 z-10 p-2 rounded-full bg-white/80 backdrop-blur-sm border border-white/30 transition-all duration-300 hover:bg-white hover:scale-110 group-hover:shadow-lg">
                  <i class="fas fa-heart text-gray-400 hover:text-red-500 transition-colors"></i>
                </button>

                <!-- Product Image -->
                <div class="relative overflow-hidden rounded-t-3xl">
                  <img src="/uploads/products/<%= product.images[0] %>" alt="<%= product.name %>" 
                    class="w-full h-52 object-cover transition-transform duration-500 group-hover:scale-110">
                  <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                </div>

                <!-- Product Info -->
                <div class="p-6 flex-1 flex flex-col justify-between">
                  <div>
                    <h3 class="text-lg font-semibold text-gray-800 truncate group-hover:text-indigo-600 transition-colors" 
                      title="<%= product.name %>">
                      <%= product.name %>
                    </h3>
                    <p class="text-sm text-gray-500 mt-1 font-medium">
                      <%= product.categoryId[0].name %>
                    </p>
                  </div>
                  
                  <div class="mt-4 space-y-1">
                    <p class="text-sm line-through text-gray-400">₹<%= product.basePrice %></p>
                    <p class="text-xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">
                      ₹<%= product.discountPrice %>
                    </p>
                  </div>
                </div>
              </div>
            </a>
          <% }) %>
        </div>

        <!-- Pagination -->
        <% if (pagination.totalPages > 1) { %>
          <div class="flex justify-center mt-12">
            <nav class="flex space-x-2 bg-white/90 backdrop-blur-lg rounded-full p-2 shadow-xl border border-white/30">
              <% for (let i = 1; i <= pagination.totalPages; i++) { %>
                <a href="/allProducts?page=<%= i %>&search=<%= search || '' %>&sort=<%= sort || '' %>&category=<%= category || '' %>&minPrice=<%= minPrice || '' %>&maxPrice=<%= maxPrice || '' %>"
                  class="px-4 py-2 rounded-full font-medium transition-all duration-300 <%= pagination.currentPage === i ? 'bg-gradient-to-r from-indigo-500 to-purple-600 text-white shadow-lg' : 'text-gray-700 hover:bg-gray-100 hover:scale-105' %>">
                  <%= i %>
                </a>
              <% } %>
            </nav>
          </div>
        <% } %>
      </main>
    </div>
  </div>
</body>

</html>