<% title="Profile" %>

<div class="space-y-6">
  <!-- User Info Header -->
  <div class="flex items-center space-x-6">
    <img src="<%= user.profile || '/images/user-profile.png' %>" alt="User" class="w-24 h-24 rounded-full border-2 border-gray-600 transition-transform duration-300 transform hover:scale-110" />
    <div>
      <h2 class="text-2xl font-semibold">
        <%= user.name %>
      </h2>
      <p class="text-sm text-gray-500">
        <%= user.email %>
      </p>
    </div>
    <a href="/profile/edit" class="ml-auto text-gray-600 hover:underline">Edit Profile</a>
  </div>

  <!-- Personal Details -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 bg-white p-6 rounded-lg shadow">
    <div>
      <h4 class="text-sm text-gray-600">Mobile Number</h4>
      <p class="text-gray-800">
        <%= user.mobileNumber || '-----' %>
      </p>
    </div>
    <div>
      <h4 class="text-sm text-gray-600">Gender</h4>
      <p class="text-gray-800">
        <%= user.gender || '----' %>
      </p>
    </div>
    <div>
      <h4 class="text-sm text-gray-600">Account Created</h4>
      <p class="text-gray-800">
        <%= joinedDate %>
      </p>
    </div>
    <div class="md:col-span-2">
      <h4 class="text-sm text-gray-600">Primary Shipping Address</h4>
      <% if(address) {%>
      <p class="text-gray-800">
        <%= address.houseNo + ', ' + address.locality + ', ' + address.city + ', ' + address.state + ' - ' +
            address.pincode %>
      </p>
      <% }else {%>
        <p class="text-gray-800"> No address</p>
        <% } %>
    </div>
    <div>
      <h4 class="text-sm text-gray-600">Wallet Balance</h4>
      <p class="text-gray-800">â‚¹<%= walletBalance || 0 %></p>
    </div>
    <div>
      <h4 class="text-sm text-gray-600">Referral Code</h4>
      <p class="text-gray-800">
        <%= user.referralCode || 'Not referred' %>
      </p>
    </div>
    <div>
      <h4 class="text-sm text-gray-600">Newsletter</h4>
      <p class="text-gray-800">
        <%= user.newsLetter ? 'Subscribed' : 'Not Subscribed' %>
      </p>
    </div>
  </div>

  <!-- Links to Other Pages -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

  </div>
  <!-- Referral Link Generator -->
<div>
  <h4 class="text-sm text-gray-600">Your Referral Link</h4>
  <div class="flex gap-2">
    <input type="text" readonly value="<%= referralLink %>" id="refLink"
           class="w-full border px-3 py-1 rounded text-gray-700 text-sm" />
    <button onclick="copyReferralLink()"
            class="bg-blue-600 text-white px-3 py-1 rounded hover:bg-blue-700 text-sm">
      Copy
    </button>
  </div>
  <p id="copyMessage" class="text-green-600 text-sm mt-1 hidden">Referral link copied!</p>
</div>
</div>