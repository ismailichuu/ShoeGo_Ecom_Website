<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>ShoeGo - Sign up</title>
  <link rel="shortcut icon" href="images/favicon.png" type="image/x-icon">
  <link rel="stylesheet" href="css/style.css">
  <link rel="stylesheet" href="css/output.css">
</head>

<body class="min-h-screen bg-gradient-to-r from-gray-900 via-gray-800 to-black flex items-center justify-center">
  <div class="text-center space-y-8">
    <div class="typewriter">
      <h2 class="text-3xl text-white">Welcome to ShoeGo...</h2>
    </div>
    <!-- Sign Up Card -->
    <div class="bg-white p-8 rounded-2xl shadow-2xl max-w-md w-full mx-auto space-y-6 border border-gray-200">
      <!-- Google Login Button -->
      <a href="/auth/google"
        class="flex items-center justify-center w-full gap-3 bg-white text-gray-800 font-semibold py-2 px-8 rounded-full hover:bg-gray-400 transition shadow">
        <img src="images/glogo.png" alt="Google" class="w-5 h-5">
        Continue with Google
      </a>

      <div class="flex items-center gap-4 text-gray-400 text-sm font-medium">
        <hr class="flex-grow border-gray-300">
        <span>or</span>
        <hr class="flex-grow border-gray-300">
      </div>

      <form action="/signup" method="post" class="space-y-4">
        <!-- Name Field -->
        <div>
          <input type="text" placeholder="Name" name="name"
            class="w-full px-4 py-2 rounded-lg bg-gray-100 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-700"
            required>
        </div>

        <!-- Email Field -->
        <div>
          <input type="email" placeholder="Email" name="email"
            class="w-full px-4 py-2 rounded-lg bg-gray-100 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-700"
            required>
        </div>

        <!-- Password Field -->
        <!-- Password Field -->
        <div class="relative">
          <input id="password1" type="password" placeholder="Password" name="password1"
            class="w-full px-4 py-2 rounded-lg bg-gray-100 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-700"
            required>
          <p id="password1-error" class="text-sm text-red-600 mt-1 hidden"></p>
        </div>

        <!-- Confirm Password Field -->
        <div class="relative">
          <input id="password2" type="password" placeholder="Confirm Password" name="password2"
            class="w-full px-4 py-2 rounded-lg bg-gray-100 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-700"
            required>
          <p id="password2-error" class="text-sm text-red-600 mt-1 hidden"></p>
        </div>


        <% if(msg) { %>
          <p class="text-red-600 text-center" id="error">
            <%= msg %>
          </p>
          <script>
            setTimeout(() => {
              document.getElementById('error').style.display = 'none';
            }, 8000);
          </script>
          <% } %>

            <!-- Sign Up Button -->
            <div >
              <button type="submit"
                class="w-full bg-black hover:bg-gray-800 text-white font-semibold py-2 rounded-lg transition shadow">
                Sign Up
              </button>
            </div>
      </form>

      <!-- Sign In Link (outside the form) -->
      <p class="text-sm text-gray-700 mt-4">
        Already have an account?
        <a href="/login" class="text-gray-900 hover:underline font-medium">Back to Login</a>
      </p>
    </div>
  </div>
  <script src="/js/validation.js"></script>
</body>
</html>