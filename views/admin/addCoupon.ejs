<div class="p-6 bg-white rounded-xl shadow-md w-full max-w-3xl ">
  <h2 class="text-2xl font-semibold text-gray-800 mb-6">Add New Coupon</h2>

  <form action="/admin/coupons/add" method="POST" id="add-coupon" class="space-y-4">
    <div>
      <label class="block mb-1 font-medium text-gray-700">Coupon Name</label>
      <input type="text" name="name" required class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-indigo-400" />
    </div>

    <div>
      <label class="block mb-1 font-medium text-gray-700">Coupon Code</label>
      <input type="text" name="code" required class="w-full px-4 py-2 border rounded uppercase focus:outline-none focus:ring-2 focus:ring-indigo-400" />
    </div>

    <div>
      <label class="block mb-1 font-medium text-gray-700">Discount Amount (₹)</label>
      <input type="number" name="discount" required class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-indigo-400" />
    </div>

     <div>
      <label class="block mb-1 font-medium text-gray-700">Minimum Order Amount (₹)</label>
      <input type="number" name="minAmount" required class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-indigo-400" />
    </div>

    <div class="w-1/2">
      <label class="block mb-1 font-medium text-gray-700">Active From</label>
      <input type="date" name="activeFrom" id="activeFrom" required class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-indigo-400" />
    </div>

    <div class="w-1/2">
      <label class="block mb-1 font-medium text-gray-700">Active To</label>
      <input type="date" name="activeTo" id="activeTo" required class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-indigo-400" />
    </div>
    <div id="dateError" class="hidden mb-4 p-3 rounded text-sm bg-red-100 text-red-700">
      "Active From" date must be earlier than "Active To" date.
    </div>


    <div>
      <label class="block mb-1 font-medium text-gray-700">Usage Limit</label>
      <input type="number" name="limit" required min="1" class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-indigo-400" />
    </div>

    <div class="flex justify-end space-x-2 mt-6">
      <a href="/admin/coupons" class="px-4 py-2 border rounded text-gray-600 hover:bg-gray-100">Cancel</a>
      <button type="submit" class="bg-indigo-600 text-white px-6 py-2 rounded hover:bg-indigo-700">
        Add Coupon
      </button>
    </div>
  </form>
</div>
