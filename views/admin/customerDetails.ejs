<div class="max-w-7xl mx-auto p-6 bg-white rounded-lg shadow-md">
  <!-- Header -->
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-2xl font-bold">Customer Details</h2>
    <% if(customer.isBlocked) { %>
      <button class="userBlock bg-green-500 text-white px-4 py-2 rounded-md"
        data-id="<%= customer._id %>">Unblock</button>
      <% }else {%>
        <button class="userBlock bg-red-500 text-white px-4 py-2 rounded-md" data-id="<%= customer._id %>">
          Block</button>
        <% } %>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Profile Info -->
    <div class="bg-white border border-dashed border-blue-400 p-4 rounded-lg shadow-sm">
      <div class="flex flex-col items-center mb-4">
        <img src="<%= customer.profile || '/images/user-profile.png' %>"
          class="rounded-full border-4 border-white shadow-md w-2/3" />
        <h3 class="text-xl font-semibold mt-2">
          <%= customer.name %>
        </h3>
        <% if(customer.isBlocked) { %>
          <span class="bg-red-300 text-red-500 text-sm px-3 py-1 rounded-full mt-1">Blocked</span>
          <% }else { %>
            <span class="bg-green-100 text-green-700 text-sm px-3 py-1 rounded-full mt-1">Active</span>
            <% } %>
      </div>
      <ul class="text-sm space-y-2">
        <li><strong>Email:</strong> <a href="mailto:cpnavaneeth@gmail.com" class="text-blue-600">
            <%= customer.email %>
          </a></li>
        <% if (address) { %>
          <li><strong>Address:</strong>
            <%= address.houseNo + ', ' + address.locality + ', ' + address.city + ', ' + address.state + ' - ' +
              address.pincode %>
              <% if (address.landmark) { %>
                , Landmark: <%= address.landmark %>
                  <% } %>
          </li>
          <% } else { %>
            <li><strong>Address:</strong> Not available</li>
            <% } %>

              <li><strong>Phone:</strong>
                <%= customer.mobileNumber %>
              </li>
              <li><strong>Last Transaction:</strong> 12 December 2023</li>
              <li><strong>Joinded :</strong>
                <%= joinedDate %>
              </li>
      </ul>
    </div>

    <!-- Stats -->
    <div class="lg:col-span-2 grid grid-cols-1 md:grid-cols-2 gap-4">
      <!-- Total Orders -->
      <div class="bg-gray-100 p-4 rounded-lg shadow-sm">
        <p class="text-sm text-gray-500">Total Orders</p>
        <h2 class="text-2xl font-bold mt-1">2,400</h2>
        <span class="text-xs text-green-600">+24 this month</span>
      </div>

      <!-- Total Balance -->
      <div class="bg-gray-100 p-4 rounded-lg shadow-sm">
        <p class="text-sm text-gray-500">Total Balance</p>
        <h2 class="text-2xl font-bold mt-1">₹10,000.00</h2>
        <span class="text-xs text-green-600">10% ↑ ₹100 today</span>
      </div>

      <!-- Transaction History -->
      <div class="md:col-span-2 bg-white border mt-4 rounded-lg overflow-x-auto">
        <div class="flex justify-between items-center p-4 border-b">
          <h3 class="text-lg font-semibold">Transaction History</h3>
          <div class="flex gap-2">
            <button class="text-sm bg-gray-100 px-3 py-1 rounded-md">Select Date</button>
            <button class="text-sm bg-gray-100 px-3 py-1 rounded-md">Filter</button>
          </div>
        </div>
        <table class="w-full text-sm text-left">
          <thead class="bg-gray-100 text-gray-600">
            <tr>
              <th class="px-4 py-2">Order ID</th>
              <th class="px-4 py-2">Product</th>
              <th class="px-4 py-2">Total</th>
              <th class="px-4 py-2">Status</th>
              <th class="px-4 py-2">Date</th>
            </tr>
          </thead>
          <tbody class="text-gray-700">
            <tr class="border-b">
              <td class="px-4 py-2">302002</td>
              <td class="px-4 py-2 flex items-center gap-2"><img src="https://via.placeholder.com/24"
                  class="w-6 h-6" />Nike Air</td>
              <td class="px-4 py-2">₹321.00</td>
              <td class="px-4 py-2"><span class="bg-orange-100 text-orange-700 px-2 py-1 rounded-full">Processing</span>
              </td>
              <td class="px-4 py-2">12 Dec 2023</td>
            </tr>
            <tr class="border-b">
              <td class="px-4 py-2">301002</td>
              <td class="px-4 py-2 flex items-center gap-2"><img src="https://via.placeholder.com/24"
                  class="w-6 h-6" />Hannya goods hoodie</td>
              <td class="px-4 py-2">₹795.00</td>
              <td class="px-4 py-2"><span class="bg-orange-100 text-orange-700 px-2 py-1 rounded-full">Processing</span>
              </td>
              <td class="px-4 py-2">1 Dec 2023</td>
            </tr>
            <tr class="border-b">
              <td class="px-4 py-2">301001</td>
              <td class="px-4 py-2 flex items-center gap-2"><img src="https://via.placeholder.com/24"
                  class="w-6 h-6" />Wall decor x2</td>
              <td class="px-4 py-2">₹1,200.00</td>
              <td class="px-4 py-2"><span class="bg-blue-100 text-blue-700 px-2 py-1 rounded-full">Shipped</span></td>
              <td class="px-4 py-2">10 Nov 2023</td>
            </tr>
            <tr class="border-b">
              <td class="px-4 py-2">301031</td>
              <td class="px-4 py-2 flex items-center gap-2"><img src="https://via.placeholder.com/24"
                  class="w-6 h-6" />All Star Rainbow</td>
              <td class="px-4 py-2">₹850.00</td>
              <td class="px-4 py-2"><span class="bg-blue-100 text-blue-700 px-2 py-1 rounded-full">Shipped</span></td>
              <td class="px-4 py-2">1 Oct 2023</td>
            </tr>
            <tr>
              <td class="px-4 py-2">301043</td>
              <td class="px-4 py-2 flex items-center gap-2"><img src="https://via.placeholder.com/24"
                  class="w-6 h-6" />Geisha warrior tee</td>
              <td class="px-4 py-2">₹600.00</td>
              <td class="px-4 py-2"><span class="bg-green-100 text-green-700 px-2 py-1 rounded-full">Delivered</span>
              </td>
              <td class="px-4 py-2">7 Sep 2023</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>