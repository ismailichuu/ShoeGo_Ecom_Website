
<div class="flex flex-col sm:flex-row sm:justify-between sm:items-center mb-6 gap-4 mt-4">
    <h1 class="text-2xl font-semibold">Dashboard</h1>
    <input type="text" placeholder="Search" class="border rounded px-4 py-2 w-full sm:w-64 shadow" />
  </div>
  
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-pink-100 p-4 rounded-xl shadow text-center">
      <p class="text-2xl font-bold text-pink-600">₹70K</p>
      <p>Total Sales</p>
    </div>
    <div class="bg-yellow-100 p-4 rounded-xl shadow text-center">
      <p class="text-2xl font-bold text-yellow-600">300</p>
      <p>Total Orders</p>
    </div>
    <div class="bg-green-100 p-4 rounded-xl shadow text-center">
      <p class="text-2xl font-bold text-green-600">50</p>
      <p>Products Sold</p>
    </div>
    <div class="bg-purple-100 p-4 rounded-xl shadow text-center">
      <p class="text-2xl font-bold text-purple-600">15</p>
      <p>New Customers</p>
    </div>
  </div>
  
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <div class="lg:col-span-2 bg-white p-6 rounded-xl shadow overflow-x-auto">
      <h2 class="text-lg font-semibold mb-4">Total Revenue (2024 vs 2025)</h2>
      <table class="w-full text-sm text-left min-w-[500px]">
        <thead class="bg-purple-100">
          <tr>
            <th class="p-2">Month</th>
            <th class="p-2">Revenue 2024</th>
            <th class="p-2">Revenue 2025</th>
          </tr>
        </thead>
        <tbody>
          <% ['January', 'February', 'March', 'April'].forEach((month, i) => { %>
            <tr class="<%= i % 2 === 0 ? 'bg-gray-50' : '' %>">
              <td class="p-2"><%= month %></td>
              <td class="p-2">₹90,000</td>
              <td class="p-2">₹91,000</td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  
    <div class="bg-white p-6 rounded-xl shadow">
      <h2 class="text-lg font-semibold mb-4">Customer Map</h2>
      <div class="h-40 bg-gray-100 rounded"></div>
    </div>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-6">
    <div class="bg-white p-6 rounded-xl shadow">
      <h2 class="text-lg font-semibold mb-4">Product Sold</h2>
      <div class="h-40 bg-gray-100 rounded"></div>
    </div>
    <div class="bg-white p-6 rounded-xl shadow md:col-span-1 lg:col-span-2 flex flex-col sm:flex-row items-center justify-around gap-6">
      <div class="text-center">
        <p class="text-3xl font-bold text-purple-600">81%</p>
        <p>Total Order</p>
      </div>
      <div class="text-center">
        <p class="text-3xl font-bold text-green-600">22%</p>
        <p>Customer Growth</p>
      </div>
      <div class="text-center">
        <p class="text-3xl font-bold text-red-600">60%</p>
        <p>Total Revenue</p>
      </div>
    </div>
  </div>
  